<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SkinBox.Controls">
    <SolidColorBrush x:Key="{x:Static controls:Keys.BackgroundBrushKey}" controls:ColorKey.RecourceReference="{DynamicResource {x:Static controls:Keys.BackgroundColorKey}}" />

    <LinearGradientBrush x:Key="{x:Static controls:Keys.LinearBrushKey}" Opacity="2" EndPoint="0, 1">
        <GradientStop controls:ColorKey.RecourceReference="{DynamicResource {x:Static controls:Keys.BackgroundColorKey}}" Offset="0" />
        <GradientStop controls:ColorKey.RecourceReference="{DynamicResource {x:Static controls:Keys.BackgroundColorKey}}" Offset=".3" />
        <GradientStop Offset="1" Color="Transparent" />
    </LinearGradientBrush>
</ResourceDictionary>