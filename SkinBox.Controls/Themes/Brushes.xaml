<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SkinBox.Controls">
    <SolidColorBrush x:Key="{x:Static controls:Keys.BackgroundBrushKey}"
                     controls:ColorKey.RecourceReference="{DynamicResource {x:Static controls:Keys.BackgroundColorKey}}" />

    <LinearGradientBrush x:Key="{x:Static controls:Keys.LinearBrushKey}"
                      Opacity="2" EndPoint="0, 1">
        <GradientStop Offset="0" controls:ColorKey.RecourceReference="{DynamicResource {x:Static controls:Keys.BackgroundColorKey}}" />
        <GradientStop Offset=".3" controls:ColorKey.RecourceReference="{DynamicResource {x:Static controls:Keys.BackgroundColorKey}}" />
        <GradientStop Offset="1" Color="Transparent" />
    </LinearGradientBrush>
</ResourceDictionary>