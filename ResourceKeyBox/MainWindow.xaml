<Window x:Class="ResourceKeyBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ResourceKeyBox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Window.Resources>
        <SolidColorBrush x:Key="{x:Static local:Keys.BlueBrushKey}" Color="Blue" />
    </Window.Resources>
    <Grid Background="{DynamicResource {x:Static local:Keys.BlueBrushKey}}">
        <Button Height="50" Width="50" Click="ButtonBase_OnClick"></Button>
    </Grid>
</Window>
